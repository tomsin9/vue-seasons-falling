{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist/types",
      "skipLibCheck": true
    },
    "include": ["src/**/*.vue", "src/**/*.ts"]
}